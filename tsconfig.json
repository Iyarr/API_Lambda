{
  "compilerOptions": {
    // these options are read by esbuild
    "isolatedModules": true,
    // these options are not read by esbuild
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es2022",
    "module": "es2022",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**.ts"],
  "exclude": ["node_modules"]
}
